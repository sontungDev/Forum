
@{
    ViewBag.Title = "ManageAdmin";
    Layout = "~/Views/Shared/_admin_layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "DateTimeCreated", rowsPerPage: 3);
}

<style>
    .grid-footer a {
        background-color: #ffffff;
        color: blue;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        padding: 1px 10px 2px 10px;
        font-size: 16px;
    }

    .grid-footer {
        color: #000;
        font: 17px Calibri;
        text-align: center;
        font-weight: bold;
    }

        .grid-footer > a:active, .grid-footer > a:hover {
            background-color: #ffffff;
            color: #17a2b8;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }
</style>
<div class="search d-flex justify-content-center mb-3" style="font-size:13px;">
    <form method="post" action="/Admin/Clubs">
        <table class="text-center">
            <tr class="my-5">
                <td>Mã bài viết &nbsp; &nbsp; </td>
                <td><input type="text" class="form-control type" name="id" value="@ViewBag.post"></td>
            </tr>
            <tr class="my-5">
                <td>Mã tài khoản &nbsp; &nbsp;</td>
                <td><input type="text" class="form-control type" name="ten" value="@ViewBag.user"></td>
            </tr>
            <tr class="my-5">
                <td>Mã CLB &nbsp; &nbsp;</td>
                <td><input type="text" class="form-control type" name="email" value="@ViewBag.clb"></td>
            </tr>
            <tr>
                <td></td>
                <td style="">
                    <button type="submit" class="btn btn-sm btn-info mt-2">Tìm kiếm</button>
                    <button id="reset" class="btn btn-sm btn-info mt-2">Làm mới</button>
                </td>
            </tr>
            <tr>
                <td colspan="2" class="text-danger">@ViewBag.nodata</td>
            </tr>
        </table>
    </form>
</div>
<div id="gridContent">
    @grid.GetHtml(
      tableStyle: "table table-bordered table-hover",
      footerStyle: "grid-footer",
      fillEmptyRows: true,
      mode: WebGridPagerModes.Numeric,
      alternatingRowStyle: "alternatingRowStyle",
      columns: new[]  // colums in grid
        {
          grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
          grid.Column("ID","ID"), //the model fields to display
          grid.Column("AdministratorName","Tên đăng nhập"  ),
          grid.Column("FullName","CLB"),
          grid.Column("DateCreated","Ngày tạo",format:@<text> @item.DateCreated.ToString("dd/MM/yyyy")</text>),
grid.Column("Email","Email"),
grid.Column("Phone","SĐT"),
grid.Column("Level","Mức độ truy cập"),

grid.Column("Chức năng", format: @<text>
            <a href="@Url.Action("Edit",
                        new { id = item.ID})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
            <a href="@Url.Action("Details",
                        new { id = item.ID})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></a>
            <a href="@Url.Action("Delete",
                        new { id = item.ID})" class="edit-btn">
                <abbr title="Xóa dữ liệu">
                    <img src="/images/delete.png" width="20" height="20" />
                </abbr>
            </a>
</text>),
}
)
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('.tabf').removeClass('active');
            var active = $('.tabf').eq(5);
            active.addClass('active');
        });
    </script>
}

